{
  "name": "splight-api",
  "private": true,
  "scripts": {
    "test": "standard --fix && nyc mocha --async-only --check-leaks --timeout 10000 **/*-tests.js",
    "test:watch": "nodemon --ext js,gqls,json --exec npm test",
    "serve": "nodemon --ext js,gqls src/serve.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "hashids": "^1.2.2",
    "moment": "^2.24.0",
    "mongodb": "^3.1.13",
    "stringify": "^5.2.0"
  },
  "devDependencies": {
    "apollo-link-http": "^1.5.11",
    "mocha": "^6.0.1",
    "mongodb-memory-server": "^3.1.1",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "standard": "^12.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ]
  }
}
